{% extends 'base.html.twig' %}

{% block title %}Admin dashboard{% endblock %}

{% block body %}
<h1>Dashboard Magnifique</h1>

<h2>Liens</h2>
<table border="1" cellpadding="8">
    <thead>
        <tr>
            <th>ID</th>
            <th>Titre</th>
            <th>URL</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        {% for link in links %}
            <tr>
                <td>{{ link.id }}</td>
                <td>{{ link.title }}</td>
                <td>
                    <a href="{{ link.url }}" target="_blank">
                        {{ link.url }}
                    </a>
                </td>
                <td>{{ link.description }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun lien</td>
            </tr>
        {% endfor %}
    </tbody>
</table>

<hr>

<h2>Utilisateurs</h2>
<table border="1" cellpadding="8">
    <thead>
        <tr>
            <th>ID</th>
            <th>Email</th>
            <th>Prénom</th>
            <th>Nom</th>
            <th>Rôles</th>
        </tr>
    </thead>
    <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.firstname }}</td>
                <td>{{ user.lastname }}</td>
                <td>
                    {{ user.roles|join(', ') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun utilisateur</td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
