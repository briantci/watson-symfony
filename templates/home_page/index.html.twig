{% extends 'base.html.twig' %}

{% block title %}Accueil - Watson{% endblock %}

{% block body %}
<div class="bg-light">
    {# Hero Section #}
    <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm py-3">
        <div class="container">
            <ul class="collapse navbar-collapse" id="navbarNav">
                <li class="navbar-nav p-2"><a class="navbar-brand fw-bold" href="{{ path('app_home_page') }}">Watson</a></li>
                <li class="navbar-nav me-auto">
                    <a href="{{ path('app_link_index') }}" class="btn btn-outline-secondary">Voir les liens</a>
                </li>
                {% if is_granted('ROLE_ADMIN') %}
                <li class="navbar-nav">
                    <a href="{{ path('app_admin_dashboard') }}" class="btn btn-warning ms-3">
                        Dashboard
                    </a>
                </li>
                {% endif %}
                {% if not app.user %}
                    <li class="navbar-nav ms-auto">
                        <a class="btn btn-secondary" href="{{ path('app_login') }}">
                            Se connecter
                        </a>
                    </li>
                {%  else %}
                    <li class="navbar-nav ms-auto">
                        <a class="btn btn-secondary" href="{{ path('app_logout') }}">
                            Se déconnecter
                        </a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </nav>

		<section class="py-5">
			<div class="container">
				<div class="row align-items-center">
					<div class="col-lg-6">
						<h1 class="display-4 fw-bold">Bienvenue sur Watson</h1>
						<p class="lead text-muted">Développé par les étudiants Unilim.</p>
						<div class="d-grid gap-2 d-md-flex"></div>
					</div>
					<div class="col-lg-6"></div>
				</div>
			</div>
		</section>

		<section class="py-5 bg-white">
			<div class="container">
				<div class="d-flex justify-content-between align-items-center mb-4">
					<h2 class="mb-4">Derniers liens</h2>
					<a href="{{ path('app_link_index') }}" class="btn btn-light">Voir tous</a>
				</div>
				<div class="row g-4">
					{% for link in links %}
						<div class="col-md-6 col-lg-4">
							<div class="card h-100">
								<div class="card-body">
									<h5 class="card-title">{{ link.title }}</h5>
									<p class="card-text">{{ link.description }}</p>
									<a href="{{ path('app_link_show', {'id': link.id}) }}" class="btn btn-primary">Visiter</a>
								</div>
							</div>
						</div>
					{% endfor %}
				</div>
			</div>
		</section>
	</div>
{% endblock %}
