{% extends 'base.html.twig' %}

{% block title %}Accueil - Watson{% endblock %}

{% block body %}
<div class="bg-light">
    {# Hero Section #}
    <section class="py-5">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <h1 class="display-4 fw-bold">Bienvenue sur Watson</h1>
                    <p class="lead text-muted">Votre plateforme de gestion de liens intelligente</p>
                    <div class="d-grid gap-2 d-md-flex">
                        <a href="{{ path('app_login') }}" class="btn btn-primary btn-lg px-4">Commencer</a>
                        <a href="{{ path('app_link_index') }}" class="btn btn-outline-secondary btn-lg px-4">Voir les liens</a>
                    </div>
                </div>
                <div class="col-lg-6">
                    <img src="https://via.placeholder.com/500x400" class="img-fluid rounded" alt="Hero image">
                </div>
            </div>
        </div>
    </section>

    {# Features Section #}
    <section class="py-5 bg-white">
        <div class="container">
            <h2 class="text-center mb-5">Fonctionnalités</h2>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body text-center">
                            <div class="mb-3">
                                <svg class="bi text-primary" width="48" height="48"><use xlink:href="#link"/></svg>
                            </div>
                            <h5 class="card-title">Gestion des liens</h5>
                            <p class="card-text">Organisez et gérez vos liens facilement</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body text-center">
                            <div class="mb-3">
                                <svg class="bi text-success" width="48" height="48"><use xlink:href="#shield"/></svg>
                            </div>
                            <h5 class="card-title">Sécurisé</h5>
                            <p class="card-text">Vos données sont protégées</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body text-center">
                            <div class="mb-3">
                                <svg class="bi text-warning" width="48" height="48"><use xlink:href="#lightning"/></svg>
                            </div>
                            <h5 class="card-title">Rapide</h5>
                            <p class="card-text">Performances optimales</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
{% endblock %}
